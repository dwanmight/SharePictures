<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="@string/letter_adress"
        android:id="@+id/tvAdress"
        android:layout_margin="10dp"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvEmailAdress"
        android:text="Some text"
        android:layout_toRightOf="@id/tvAdress"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvSubject"
        android:layout_below="@id/tvAdress"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/letter_subject"
        android:textSize="14sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvSubjectText"
        android:text="Some subject"
        android:layout_toRightOf="@id/tvSubject"
        android:layout_below="@id/tvEmailAdress"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="14sp"
        android:textStyle="italic"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/crime_imageView"
        android:scaleType="centerInside"
        android:cropToPadding="true"
        android:background="@android:color/darker_gray"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"/>


</RelativeLayout>