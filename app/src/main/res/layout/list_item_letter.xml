<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="8dp"
                android:layout_marginTop="8dp"
                style="?android:attr/listSeparatorTextViewStyle">
    <LinearLayout android:id="@+id/linLAy1"
                  android:layout_marginTop="8dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView
            android:textColor="@color/colorWhite"
            android:id="@+id/tvAddress"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/letter_address"
            android:textSize="14sp"/>
        <TextView
            android:textColor="@color/colorWhite"

            android:id="@+id/tvEmailAdress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="4dp"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/linLAy1">
        <TextView
            android:textColor="@color/colorWhite"
            android:id="@+id/tvSubject"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAddress"
            android:fontFamily="sans-serif"
            android:text="@string/letter_subject"
            android:textSize="14sp"/>
        <TextView
            android:textColor="@color/colorWhite"

            android:id="@+id/tvSubjectText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvEmailAdress"
            android:layout_toRightOf="@id/tvSubject"
            android:fontFamily="sans-serif-condensed"
            android:padding="4dp"
            android:text=""
            android:textSize="14sp"
            android:textStyle="italic"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/letter_imageView"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/darker_gray"
        android:cropToPadding="true"
        android:scaleType="fitXY"
        android:scrollbarStyle="insideOverlay"/>
</RelativeLayout>