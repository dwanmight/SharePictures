<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp">
    <LinearLayout android:layout_width="match_parent"
                  android:id="@+id/linLAy1"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  >
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/letter_address"
            android:fontFamily="sans-serif"
            android:id="@+id/tvAddress"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"/>
        <TextView
            android:fontFamily="sans-serif-condensed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvEmailAdress"
            android:padding="8dp"
            android:textSize="14sp"
            android:textStyle="italic"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"

    android:layout_below="@id/linLAy1">
        <TextView
            android:fontFamily="sans-serif"

            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvSubject"
            android:layout_below="@id/tvAddress"
            android:layout_marginLeft="16dp"
            android:text="@string/letter_subject"
            android:textSize="14sp"/>
        <TextView
            android:fontFamily="sans-serif-condensed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvSubjectText"
            android:text=""
            android:layout_toRightOf="@id/tvSubject"
            android:layout_below="@id/tvEmailAdress"
            android:padding="8dp"
            android:textSize="14sp"
            android:textStyle="italic"/>
    </LinearLayout>


    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/letter_imageView"
        android:scaleType="fitXY"
        android:cropToPadding="true"
        android:background="@android:color/darker_gray"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:scrollbarStyle="insideOverlay"/>


</RelativeLayout>